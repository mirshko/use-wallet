{
  "name": "@mirshko/use-wallet",
  "version": "1.3.0",
  "license": "MIT",
  "author": "Jeff Reiner",
  "main": "dist/index.js",
  "module": "dist/use-wallet.esm.js",
  "typings": "dist/index.d.ts",
  "private": false,
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build --format esm",
    "lint": "dts lint",
    "prepare": "dts build --format esm",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/use-wallet.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@tsconfig/create-react-app": "^1.0.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "dts-cli": "^1.5.1",
    "husky": "^7.0.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "size-limit": "^7.0.8",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.6.4",
    "web3modal": "^1.9.7",
    "zustand": "^4.0.0-rc.0"
  }
}
